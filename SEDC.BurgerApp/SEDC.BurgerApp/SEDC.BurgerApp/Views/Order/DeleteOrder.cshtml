@using SEDC.BurgerApp.ViewModels.Orders;
@model OrderDetailsViewModel

<h2>Are you sure that u want to delete the following order: </h2>
<p>Order: @Model.OrderName</p>
<p>Location: @Model.Location</p>
<p>Address: @Model.Address</p>
<p>TotalPrice: @Model.TotalPrice</p>
<p>Burgers:</p>
@foreach(var burger in Model.burgerOrders){
    <p>@burger.Burger.Name</p>
}
<a class="btn" asp-controller="Order" asp-action="ConfirmDelete" asp-route-id="@Model.OrderId">Delete</a>
<a class="btn" asp-controller="Order" asp-action="Index">Back</a>